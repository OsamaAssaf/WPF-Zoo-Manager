<Window
    x:Class="WPFZooManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFZooManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="725"
    Height="500"
    mc:Ignorable="d">
    <Grid>
        <Label
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Zoo List" />
        <ListBox
            Name="listZoos"
            Width="158"
            Height="175"
            Margin="10,45,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectionChanged="listZoos_SelectionChanged" />
        <Label
            Margin="202,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Associated Animals List" />
        <ListBox
            x:Name="listAssociatedAnimals"
            Width="158"
            Height="175"
            Margin="202,45,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <ListBox
            x:Name="listAllAnimals"
            Width="158"
            Height="299"
            Margin="396,45,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            Width="158"
            Height="34"
            Margin="10,235,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="DeleteZoo_Click"
            Content="Delete Zoo" />
        <Button
            Width="158"
            Height="34"
            Margin="202,235,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Remove Animal" />
        <Button
            Width="158"
            Height="34"
            Margin="10,318,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="AddZoo_Click"
            Content="Add Zoo" />
        <Button
            Width="158"
            Height="34"
            Margin="202,318,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="AddAnimal_Click"
            Content="Add Animal" />
        <Button
            Width="158"
            Height="34"
            Margin="10,357,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Update Zoo" />
        <Button
            Width="158"
            Height="34"
            Margin="202,357,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Update Animal" />
        <Button
            Width="158"
            Height="34"
            Margin="396,357,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="DeleteAnimal_Click"
            Content="Delete Animal" />
        <Button
            Width="158"
            Height="34"
            Margin="396,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="addAnimalToZoo_Click"
            Content="Add Animal to Zoo" />
        <TextBox
            Name="myTextBox"
            Width="350"
            Height="39"
            Margin="10,274,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
    </Grid>
</Window>